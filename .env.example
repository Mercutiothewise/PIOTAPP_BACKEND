# PIOT Support Backend - Email Configuration
# Copy this file to .env and fill in your values

# SMTP Configuration (for sending emails)
# Option 1: Gmail (need to enable "App Passwords")
# Option 2: Outlook/Office 365
# Option 3: Your company SMTP server

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Where tickets should be sent
SUPPORT_EMAIL=support@piot.co.za

# Base URL for email links (set to your deployment URL)
BASE_URL=http://localhost:3001

# Server port (optional, defaults to 3001)
PORT=3001

# Node environment
NODE_ENV=development
